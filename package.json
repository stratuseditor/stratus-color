{ "name":        "stratus-color"
, "version":     "0.0.1"
, "description": "a syntax highligher for standalone static use or by Stratus Editor"
, "keywords":    ["stratus", "syntax", "highlighter", "browserify"]
, "homepage":    "https://github.com/stratuseditor/stratus-color/"
, "bugs":
  { "url":  "https://github.com/stratuseditor/stratus-color/issues"
  }
, "author":
  { "name": "sentientwaffle"
  , "url":  "http://sentientwaffle.github.com/"
  }

, "main":       "./lib/index"
, "browserify": "./lib/highlight.js"
, "scripts":
  { "prepublish":  "coffee -o lib -c src"
  , "test":        "mocha"
  }

, "bin":
  { "stratus-color": "./bin/stratus-color.js"
  }

, "repository":
  { "type": "git"
  , "url":  "https://github.com/stratuseditor/stratus-color.git"
  }

, "dependencies":
  { "stratus-bundle": "*"
  , "commander":      "0.x.x"
  , "stylus":         "0.x.x"
  }

, "devDependencies":
  { "should":        "0.4.x"
  , "mocha":         "0.x.x"
  , "coffee-script": "1.x.x"
  }

, "engines":
  { "node": ">=0.4.1"
  }

, "preferGlobal": true
}
